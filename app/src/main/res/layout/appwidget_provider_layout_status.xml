<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vpnLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="@dimen/padding_small"
    android:theme="@style/Theme.VPNSec"
    tools:ignore="UseCompoundDrawables">

    <ImageView
        android:id="@+id/vpnImageView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:contentDescription="@string/app_icon_vpn_description"
        android:padding="@dimen/padding_small"
        android:src="@drawable/baseline_vpn_key_24" />

    <TextView
        android:id="@+id/vpnStatusTextView"
        style="@style/App.TextAppearance.WidgetStatus"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:maxLines="1"
        android:padding="@dimen/padding_small"
        android:text="@string/app_widget_status_title_disconnected" />
</LinearLayout>